{{!< default}}
<header id="header" class="animated fadeIn" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="header-background">
    <section class="blog-content">
        <a class="blog-title fadeIn animated" href="/" itemprop="name url">{{@blog.title}}</a>
        <span class="blog-description fadeIn animated" itemprop="description">{{@blog.description}}</span>
        {{> links}}
    </section>
    </div>
</header>
<main id="main" class="index">
    {{> loop}}
</main>
